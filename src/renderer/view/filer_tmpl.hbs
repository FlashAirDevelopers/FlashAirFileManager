<div class="wrapper">
    <div class="container-fluid">
       <div class="container">
                <select id="flashair-selector" class="flashair-select" data-live-search="true">
                    {{#each flashairs}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <div class="file-manager">
                    <div class="col-xs-5">
                        <div class="row">
                            <div id="remote-reload" class="col-xs-1 fa-dir-button"><i class="glyphicon glyphicon-refresh"></i></div>
                            <input type="text" id="remote-cur-dir" value="{{remoteCurDir}}" class="col-xs-11"/>
                        </div>
                        <div id="remote-file-area" class="row">
                            <div class="col-lg-12 well">
                                <table id="remote-files" class="table table-striped table-hover table-bordered table-scroll remote-files">
                                    <thead>
                                        <tr>
                                            <th class="col-xs-1"></th>
                                            <th class="col-xs-8">{{filer_label_remote_file_name}}</th>
                                            <th class="col-xs-3">{{filer_label_remote_file_date}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {{#each remoteFiles}}
                                    <tr id="remote-file-row-{{name}}" data-file-name="{{name}}" data-file-mode="{{mode}}">
                                        {{#if isParentDirectory}}
                                        <td class="col-xs-1"><span id="remote-file-mode-{{name}}" class="glyphicon glyphicon-level-up fa-folder"/></td>
                                        {{else if isDirectory}}
                                        <td class="col-xs-1"><span id="remote-file-mode-{{name}}" class="glyphicon glyphicon-folder-close fa-folder"/></td>
                                        {{else}}
                                        <td class="col-xs-1"><span id="remote-file-mode-{{name}}" class="glyphicon glyphicon-file fa-file"/></td>
                                        {{/if}}
                                        <td class="col-xs-8" id="remote-file-name-{{name}}">{{name}}</td>
                                        <td class="col-xs-3" id="remote-file-modification-{{name}}">{{modification}}</td>
                                    </tr>
                                    {{/each}}
                                    {{#if isMoreRemoteFiles}}
                                    <tr id="remote-file-row-more-item" data-start-index="{{remoteStartIndex}}">
                                        <td class="col-xs-12 more-item">{{filer_label_remote_show_more}}</td>
                                    </tr>
                                    {{/if}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-2" style="text-align: center; line-height: 80vh;">
                    <button type="button" class="btn btn-default dl-button glyphicon glyphicon-forward" id="download-button"></button>
                    </div>
                    <div class="col-xs-5">
                        <div class="row">
                            <span id="local-reload" class="col-xs-1 fa-dir-button"><i class="glyphicon glyphicon-refresh"></i></span>
                            <input type="text" id="local-cur-dir" value="{{localCurDir}}" class="col-xs-11"/>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 well">
                                <table id="local-files" class="table table-striped table-hover table-bordered table-scroll local-files">
                                    <thead>
                                    <tr>
                                        <th class="col-xs-1"></th>
                                        <th class="col-xs-8">{{filer_label_local_file_name}}</th>
                                        <th class="col-xs-3">{{filer_label_local_file_date}}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each localFiles}}
                                    <tr id="local-file-row-{{name}}" data-file-name="{{name}}" data-file-mode="{{mode}}">
                                        {{#if isParentDirectory}}
                                        <td class="col-xs-1"><span id="local-file-mode-{{name}}" class="glyphicon glyphicon-level-up fa-folder"/></td>
                                        {{else if isDirectory}}
                                        <td class="col-xs-1"><span id="local-file-mode-{{name}}" class="glyphicon glyphicon-folder-close fa-folder"/></td>
                                        {{else}}
                                        <td class="col-xs-1"><span id="local-file-mode-{{name}}" class="glyphicon glyphicon-file fa-file"/></td>
                                        {{/if}}
                                        <td class="col-xs-8">{{name}}</td>
                                        <td class="col-xs-3">{{modification}}</td>
                                    </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>                          
           </div>
        </div>
    </div>
</div>
