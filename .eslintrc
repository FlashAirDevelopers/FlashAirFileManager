{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": [
    "standard",
    "import",
    "promise",
    "node"
  ],
  "rules": {
    "curly": 2,
    "eqeqeq": 2,
    "semi": [2, "always"],
    "quotes": [2, "single"]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
